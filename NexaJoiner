-- Functions
local function updateStatus(text)
    statusLabel.Text = "Status: " .. text
end

local function formatMoney(amount)
    if amount >= 1000000 then
        return string.format("%.1fM", amount / 1000000)
    elseif amount >= 1000 then
        return string.format("%.1fK", amount / 1000)
    else
        return tostring(amount)
    end
end

local function createJobEntry(brainrotName, money, jobId, players)
    local entry = Instance.new("Frame")
    entry.Size = UDim2.new(1, -10, 0, 60)
    entry.BackgroundColor3 = Color3.fromRGB(45, 55, 45)
    entry.BorderSizePixel = 0
    entry.ZIndex = 1002
    entry.Parent = jobListFrame
    
    local entryCorner = Instance.new("UICorner")
    entryCorner.CornerRadius = UDim.new(0, 6)
    entryCorner.Parent = entry
    
    local nameLabel = Instance.new("TextLabel")
    nameLabel.Size = UDim2.new(0.6, -10, 0.5, -5)
    nameLabel.Position = UDim2.new(0, 10, 0, 5)
    nameLabel.BackgroundTransparency = 1
    nameLabel.Text = brainrotName
    nameLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
    nameLabel.Font = Enum.Font.GothamBold
    nameLabel.TextSize = 13
    nameLabel.TextXAlignment = Enum.TextXAlignment.Left
    nameLabel.TextTruncate = Enum.TextTruncate.AtEnd
    nameLabel.ZIndex = 1003
    nameLabel.Parent = entry
    
    local moneyLabel = Instance.new("TextLabel")
    moneyLabel.Size = UDim2.new(0.4, -10, 0.5, -5)
    moneyLabel.Position = UDim2.new(0.6, 0, 0, 5)
    moneyLabel.BackgroundTransparency = 1
    moneyLabel.Text = "$" .. formatMoney(money) .. "/s"
    moneyLabel.TextColor3 = Color3.fromRGB(100, 255, 100)
    moneyLabel.Font = Enum.Font.GothamBold
    moneyLabel.TextSize = 14
    moneyLabel.TextXAlignment = Enum.TextXAlignment.Right
    moneyLabel.ZIndex = 1003
    moneyLabel.Parent = entry
    
    local playersLabel = Instance.new("TextLabel")
    playersLabel.Size = UDim2.new(0.5, -10, 0.5, -5)
    playersLabel.Position = UDim2.new(0, 10, 0.5, 0)
    playersLabel.BackgroundTransparency = 1
    playersLabel.Text = "ğŸ‘¥ " .. players .. "/8"
    playersLabel.TextColor3 = Color3.fromRGB(180, 180, 180)
    playersLabel.Font = Enum.Font.Gotham
    playersLabel.TextSize = 11
    playersLabel.TextXAlignment = Enum.TextXAlignment.Left
    playersLabel.ZIndex = 1003
    playersLabel.Parent = entry
    
    local button = Instance.new("TextButton")
    button.Size = UDim2.new(1, 0, 1, 0)
    button.BackgroundTransparency = 1
    button.Text = ""
    button.ZIndex = 1004
    button.Parent = entry
    
    button.MouseButton1Click:Connect(function()
        selectedBrainrot = {name = brainrotName, money = money, jobId = jobId, players = players}
        updateStatus("Selected: " .. brainrotName)
        
        -- Highlight selected
        for _, child in pairs(jobListFrame:GetChildren()) do
            if child:IsA("Frame") then
                child.BackgroundColor3 = Color3.fromRGB(45, 55, 45)
            end
        end
        entry.BackgroundColor3 = Color3.fromRGB(60, 100, 60)
    end)
    
    return entry
end

local function findChilliHubJobInput()
    for _, gui in pairs(playerGui:GetDescendants()) do
        if gui:IsA("TextBox") and gui.Visible then
            local placeholder = gui.PlaceholderText:lower()
            if placeholder:find("job") or placeholder:find("id") or placeholder:find("server") then
                return gui
            end
        end
    end
    return nil
end

local function findChilliHubEnterButton()
    local jobInput = findChilliHubJobInput()
    if not jobInput then return nil end
    
    local parent = jobInput.Parent
    if parent then
        for _, child in pairs(parent:GetDescendants()) do
            if child:IsA("TextButton") and child.Visible then
                local text = child.Text:lower()
                if text:find("join") or text:find("enter") or text:find("teleport") or text == ">" then
                    return child
                end
            end
        end
    end
    return nil
end

local function enterJobIdInChilliHub(jobId)
    local jobInput = findChilliHubJobInput()
    local enterButton = findChilliHubEnterButton()
    
    if not jobInput then
        updateStatus("âŒ Cannot find Chilli Hub!")
        return false
    end
    
    jobInput.Text = ""
    wait(0.05)
    jobInput.Text = jobId
    wait(0.05)
    
    if enterButton then
        pcall(function()
            for _, connection in pairs(getconnections(enterButton.MouseButton1Click)) do
                connection:Fire()
            end
            for _, connection in pairs(getconnections(enterButton.Activated)) do
                connection:Fire()
            end
        end)
        return true
    end
    
    return false
end

local function parseMoneyPerSec(moneyText)
    local amount, multiplier = moneyText:match("%$?([%d%.]+)([MKmkBb]?)")
    if not amount then return 0 end
    
    local value = tonumber(amount) or 0
    if multiplier and multiplier:upper() == "M" then
        value = value * 1000000
    elseif multiplier and multiplier:upper() == "K" then
        value = value * 1000
    elseif multiplier and multiplier:upper() == "B" then
        value = value * 1000000000
    end
    
    return value
end

local function addJobLog(jobData)
    for i, log in pairs(jobLogs) do
        if log.jobId == jobData.jobId then
            jobLogs[i] = jobData
            for _, child in pairs(jobListFrame:GetChildren()) do
                if child:IsA("Frame") then
                    child:Destroy()
                end
            end
            for _, log in pairs(jobLogs) do
                createJobEntry(log.name, log.money, log.jobId, log.players)
            end
            return
        end
    end
    
    table.insert(jobLogs, 1, jobData)
    createJobEntry(jobData.name, jobData.money, jobData.jobId, jobData.players)
    
    jobListFrame.CanvasSize = UDim2.new(0, 0, 0, listLayout.AbsoluteContentSize.Y + 10)
    
    if (currentMode == "auto" or currentMode == "spammer") then
        if not selectedBrainrot or currentMode == "auto" then
            selectedBrainrot = jobData
            spawn(function()
                wait(0.3)
                enterJobIdInChilliHub(jobData.jobId)
            end)
        end
    end
end

local function fetchJobsFromDesktop()
    spawn(function()
        while wait(CHECK_INTERVAL) do
            local success, result = pcall(function()
                local response = HttpService:GetAsync(JOB_DATA_URL)
                local jobs = HttpService:JSONDecode(response)
                
                if jobs and #jobs > 0 then
                    infoLabel.Text = "ğŸ–¥ï¸ Desktop App: Connected (" .. #jobs .. " jobs)"
                    infoLabel.TextColor3 = Color3.fromRGB(100, 255, 100)
                    
                    for _, job in ipairs(jobs) do
                        if job.name and job.jobId then
                            addJobLog({
                                name = job.name,
                                money = parseMoneyPerSec(job.money or "$0M/s"),
                                jobId = job.jobId,
                                players = tonumber(job.players) or 0
                            })
                        end
                    end
                else
                    infoLabel.Text = "ğŸ–¥ï¸ Desktop App: No jobs yet"
                    infoLabel.TextColor3 = Color3.fromRGB(255, 200, 100)
                end
            end)
            
            if not success then
                infoLabel.Text = "ğŸ–¥ï¸ Desktop App: Not Running"
                infoLabel.TextColor3 = Color3.fromRGB(255, 100, 100)
            end
        end
    end)
end

local function autoJoinMode()
    while isRunning and currentMode == "auto" do
        if selectedBrainrot then
            updateStatus("ğŸ”„ Auto joining: " .. selectedBrainrot.name)
            enterJobIdInChilliHub(selectedBrainrot.jobId)
            wait(2)
        else
            updateStatus("â¸ï¸ Waiting for job...")
            wait(1)
        end
    end
end

local function spammerMode()
    while isRunning and currentMode == "spammer" do
        if selectedBrainrot then
            updateStatus("âš¡ SPAMMING: " .. selectedBrainrot.name)
            enterJobIdInChilliHub(selectedBrainrot.jobId)
            wait(0.1)  -- SUPER FAST
        else
            updateStatus("â¸ï¸ Spammer: Select job...")
            wait(1)
        end
    end
end

-- Button Handlers
autoButton.MouseButton1Click:Connect(function()
    if currentMode == "auto" then
        isRunning = false
        currentMode = "manual"
        autoButton.BackgroundColor3 = Color3.fromRGB(40, 180, 80)
        updateStatus("â¹ï¸ Auto Join OFF")
        return
    end
    
    isRunning = true
    currentMode = "auto"
    autoButton.BackgroundColor3 = Color3.fromRGB(60, 100, 60)
    spamButton.BackgroundColor3 = Color3.fromRGB(40, 180, 80)
    updateStatus("ğŸŸ¢ Auto Join ON")
    
    spawn(autoJoinMode)
end)

spamButton.MouseButton1Click:Connect(function()
    if currentMode == "spammer" then
        isRunning = false
        currentMode = "manual"
        spamButton.BackgroundColor3 = Color3.fromRGB(40, 180, 80)
        updateStatus("â¹ï¸ Spammer OFF")
        return
    end
    
    isRunning = true
    currentMode = "spammer"
    spamButton.BackgroundColor3 = Color3.fromRGB(60, 100, 60)
    autoButton.BackgroundColor3 = Color3.fromRGB(40, 180, 80)
    updateStatus("ğŸŸ¢ SPAMMER ON")
    
    spawn(spammerMode)
end)

stopButton.MouseButton1Click:Connect(function()
    isRunning = false
    currentMode = "manual"
    selectedBrainrot = nil
    autoButton.BackgroundColor3 = Color3.fromRGB(40, 180, 80)
    spamButton.BackgroundColor3 = Color3.fromRGB(40, 180, 80)
    updateStatus("â¹ï¸ All stopped")
    
    for _, child in pairs(jobListFrame:GetChildren()) do
        if child:IsA("Frame") then
            child.BackgroundColor3 = Color3.fromRGB(45, 55, 45)
        end
    end
end)

-- Check for Chilli Hub
spawn(function()
    for i = 1, 15 do
        if findChilliHubJobInput() then
            CHILLI_HUB_LOADED = true
            updateStatus("âœ… Chilli Hub detected!")
            break
        end
        wait(1)
    end
    
    if not CHILLI_HUB_LOADED then
        updateStatus("âš ï¸ Load Chilli Hub first!")
    end
end)

-- Start fetching jobs
fetchJobsFromDesktop()

