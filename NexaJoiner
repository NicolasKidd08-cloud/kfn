local function directTeleportToJob(jobId, jobName, jobMoney)
    if isJoining then
        updateStatus("Already joining a job, please wait...")
        return
    end
    
    processedJobs[jobId] = true
    isJoining = true
    
    updateStatus("ğŸ”„ Teleporting to: " .. jobName)
    
    if currentMode == "background" then
        updateBackgroundStatus("ğŸ”„ Joining...", Color3.fromRGB(255, 200, 100))
        updateBackgroundJob(jobName, jobMoney)
    end
    
    print("[Nexa] Teleporting to Job ID: " .. jobId)
    print("[Nexa] Job: " .. jobName .. " - " .. jobMoney)
    
    wait(0.5)
    
    local success, errorMsg = pcall(function()
        TeleportService:TeleportToPlaceInstance(GAME_ID, jobId, player)
    end)
    
    if not success then
        updateStatus("âŒ Teleport failed: " .. tostring(errorMsg))
        print("[Nexa] Teleport Error:", errorMsg)
        
        if currentMode == "background" then
            updateBackgroundStatus("âŒ Join Failed", Color3.fromRGB(255, 100, 100))
        end
        
        wait(3)
        isJoining = false
        
        if currentMode == "background" then
            updateBackgroundStatus("ğŸŸ¢ Background: Active", Color3.fromRGB(100, 255, 100))
            updateBackgroundJob("Waiting for next job...", "")
        end
    end
end

local function parseMoneyPerSec(moneyText)
    if not moneyText then return 0 end
    local amount, multiplier = moneyText:match("%$?([%d%.]+)([MKmkBb]?)")
    if not amount then return 0 end
    
    local value = tonumber(amount) or 0
    multiplier = multiplier or ""
    
    if multiplier:upper() == "M" then
        value = value * 1000000
    elseif multiplier:upper() == "K" then
        value = value * 1000
    elseif multiplier:upper() == "B" then
        value = value * 1000000000
    end
    
    return value
end

local function addJobLog(jobData)
    for i, log in pairs(jobLogs) do
        if log.jobId == jobData.jobId then
            jobLogs[i] = jobData
            for _, child in pairs(jobListFrame:GetChildren()) do
                if child:IsA("Frame") then
                    child:Destroy()
                end
            end
            for _, log in pairs(jobLogs) do
                createJobEntry(log.name, log.money, log.jobId, log.players)
            end
            return
        end
    end
    
    table.insert(jobLogs, 1, jobData)
    createJobEntry(jobData.name, jobData.money, jobData.jobId, jobData.players)
    
    jobListFrame.CanvasSize = UDim2.new(0, 0, 0, listLayout.AbsoluteContentSize.Y + 10)
end

local function fetchJobsFromDesktop()
    spawn(function()
        -- Initial connection test
        local connectionTested = false
        
        while wait(CHECK_INTERVAL) do
            local success, result = pcall(function()
                local response = HttpService:GetAsync(JOB_DATA_URL)
                local jobs = HttpService:JSONDecode(response)
                
                -- Connection successful
                if not connectionTested then
                    connectionTested = true
                    print("[Nexa] Successfully connected to Desktop App!")
                end
                
                if jobs and #jobs > 0 then
                    infoLabel.Text = "ğŸ–¥ï¸ Desktop App: Connected (" .. #jobs .. " jobs)"
                    infoLabel.TextColor3 = Color3.fromRGB(100, 255, 100)
                    
                    if currentMode == "background" then
                        updateBackgroundStatus("ğŸ“¡ Desktop: " .. #jobs .. " jobs", Color3.fromRGB(100, 255, 100))
                    end
                    
                    local bestJob = nil
                    local bestMoney = 0
                    
                    for _, job in ipairs(jobs) do
                        if job.name and job.jobId and job.money then
                            local money = parseMoneyPerSec(job.money)
                            
                            addJobLog({
                                name = job.name,
                                money = job.money,
                                jobId = job.jobId,
                                players = job.players or "0"
                            })
                            
                            if money > bestMoney then
                                bestMoney = money
                                bestJob = job
                            end
                        end
                    end
                    
                    if (currentMode == "auto" or currentMode == "background") and bestJob and not isJoining then
                        if not processedJobs[bestJob.jobId] then
                            print("[Nexa] New best job:", bestJob.name, "-", bestJob.money)
                            
                            spawn(function()
                                wait(0.5)
                                directTeleportToJob(bestJob.jobId, bestJob.name, bestJob.money)
                            end)
                        end
                    end
                else
                    infoLabel.Text = "ğŸ–¥ï¸ Desktop App: Connected (0 jobs)"
                    infoLabel.TextColor3 = Color3.fromRGB(255, 200, 100)
                    
                    if currentMode == "background" then
                        updateBackgroundStatus("â¸ï¸ Desktop: No jobs", Color3.fromRGB(255, 200, 100))
                    end
                end
            end)
            
            if not success then
                local errorMsg = tostring(result)
                
                if errorMsg:find("Http requests are not enabled") then
                    infoLabel.Text = "âŒ Enable HttpService in Game Settings!"
                    infoLabel.TextColor3 = Color3.fromRGB(255, 100, 100)
                    updateStatus("âŒ HttpService not enabled! Check game settings")
                    print("[Nexa] ERROR: HttpService is not enabled!")
                    print("[Nexa] Go to Game Settings > Security > Enable HTTP Requests")
                elseif errorMsg:find("ConnectFail") or errorMsg:find("TimedOut") then
                    infoLabel.Text = "ğŸ–¥ï¸ Desktop App: Not Running"
                    infoLabel.TextColor3 = Color3.fromRGB(255, 100, 100)
                    
                    if not connectionTested then
                        print("[Nexa] Cannot connect to Desktop App")
                        print("[Nexa] Make sure the Python app is running!")
                        print("[Nexa] Server should be at: " .. JOB_DATA_URL)
                    end
                else
                    infoLabel.Text = "âš ï¸ Connection Error"
                    infoLabel.TextColor3 = Color3.fromRGB(255, 150, 100)
                    print("[Nexa] Error:", errorMsg)
                end
                
                if currentMode == "background" then
                    updateBackgroundStatus("ğŸ”´ Desktop: Offline", Color3.fromRGB(255, 100, 100))
                end
            end
        end
    end)
end

