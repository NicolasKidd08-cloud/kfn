-- Nexa Brain Rot Duper (CLIENT VISUAL ONLY)
-- Actually works with MOVED models

local Players = game:GetService("Players")
local player = Players.LocalPlayer
local gui = Instance.new("ScreenGui", player.PlayerGui)
gui.Name = "NexaBrainRotDuper"
gui.ResetOnSpawn = false

local dupeEnabled = false
local savedPositions = {}
local fakeDupes = {}

------------------------------------------------
-- UI
------------------------------------------------
local frame = Instance.new("Frame", gui)
frame.Size = UDim2.fromOffset(260,150)
frame.Position = UDim2.fromOffset(50,300)
frame.BackgroundColor3 = Color3.fromRGB(30,30,30)
frame.Active = true
frame.Draggable = true
Instance.new("UICorner", frame).CornerRadius = UDim.new(0,12)

local title = Instance.new("TextLabel", frame)
title.Size = UDim2.new(1,0,0,40)
title.Text = "Nexa Brain Rot Duper"
title.TextColor3 = Color3.new(1,1,1)
title.BackgroundTransparency = 1
title.Font = Enum.Font.GothamBold
title.TextScaled = true

local toggle = Instance.new("TextButton", frame)
toggle.Position = UDim2.fromOffset(20,50)
toggle.Size = UDim2.fromOffset(220,35)
toggle.Text = "Dupe: OFF"
toggle.Font = Enum.Font.GothamBold
toggle.TextScaled = true
toggle.BackgroundColor3 = Color3.fromRGB(160,60,60)
toggle.TextColor3 = Color3.new(1,1,1)
Instance.new("UICorner", toggle)

local clear = Instance.new("TextButton", frame)
clear.Position = UDim2.fromOffset(20,95)
clear.Size = UDim2.fromOffset(220,30)
clear.Text = "Clear Dupes"
clear.Font = Enum.Font.Gotham
clear.TextScaled = true
clear.BackgroundColor3 = Color3.fromRGB(60,60,60)
clear.TextColor3 = Color3.new(1,1,1)
Instance.new("UICorner", clear)

toggle.MouseButton1Click:Connect(function()
	dupeEnabled = not dupeEnabled
	toggle.Text = dupeEnabled and "Dupe: ON" or "Dupe: OFF"
	toggle.BackgroundColor3 = dupeEnabled and Color3.fromRGB(60,160,60) or Color3.fromRGB(160,60,60)
end)

clear.MouseButton1Click:Connect(function()
	for _,v in ipairs(fakeDupes) do
		if v and v.Parent then v:Destroy() end
	end
	table.clear(fakeDupes)
end)

------------------------------------------------
-- CORE LOGIC (THIS IS THE FIX)
------------------------------------------------
local function watchBrainrot(brainrot)
	if not brainrot:IsA("Model") then return end
	if not brainrot.PrimaryPart then return end
	if not brainrot.Name:lower():find("brain") then return end

	-- Save initial position
	savedPositions[brainrot] = brainrot.PrimaryPart.CFrame

	brainrot.PrimaryPart:GetPropertyChangedSignal("CFrame"):Connect(function()
		if not dupeEnabled then
			savedPositions[brainrot] = brainrot.PrimaryPart.CFrame
			return
		end

		local oldCF = savedPositions[brainrot]
		if not oldCF then return end

		-- Create fake copy at OLD spot
		local clone = brainrot:Clone()
		clone.Name = brainrot.Name .. "_FAKE"
		clone.Parent = workspace

		for _,p in ipairs(clone:GetDescendants()) do
			if p:IsA("BasePart") then
				p.Anchored = true
				p.CanCollide = false
				p.Transparency = 0.15
			end
		end

		clone:SetPrimaryPartCFrame(oldCF)
		table.insert(fakeDupes, clone)

		-- Update saved position
		savedPositions[brainrot] = brainrot.PrimaryPart.CFrame
	end)
end

-- Watch existing
for _,v in ipairs(workspace:GetDescendants()) do
	watchBrainrot(v)
end

-- Watch new
workspace.DescendantAdded:Connect(watchBrainrot)

